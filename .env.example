# Configurações do Servidor
PORT=3000

# Configurações de Email (escolha um dos métodos abaixo)

# Opção 1: Gmail (mais fácil para testes)
EMAIL_SERVICE=gmail
EMAIL_USER=seu.email@gmail.com
EMAIL_PASSWORD=sua_senha_de_app

# Opção 2: SMTP Personalizado (qualquer provedor)
# EMAIL_HOST=smtp.exemplo.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=seu.email@exemplo.com
# EMAIL_PASSWORD=sua_senha

# Opção 3: SendGrid
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=sua_chave_api_sendgrid

# Opção 4: AWS SES
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=sua_chave_acesso
# AWS_SECRET_ACCESS_KEY=sua_chave_secreta

# Limite de emails por requisição (segurança)
MAX_RECIPIENTS=50

# Modo de desenvolvimento (true para apenas simular envios)
DEV_MODE=true
